---
import Nav from "../components/Navbar.astro";
import Inicio from "../components/Inicio.astro";
import QuienSoy from "../components/QuienSoy.astro";
import Habilidades from "../components/Habilidades.astro";
import MisProyectos from "../components/MisProyectos.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/icono.png" />

		<title>Facundo Sanchez</title>
	</head>
	<body class="bg-[#1e1e1e] text-white">
		<Nav />
		<Inicio />
		<QuienSoy />
		<hr class="border-[#795c96] border-2 rounded-md w-9/12 m-auto"/>
		<Habilidades />
		<hr class="border-[#795c96] border-2 rounded-md w-9/12 m-auto"/>
		<MisProyectos />
		


		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
		></script>
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

	body {
		font-family: "Poppins", sans-serif !important;
	}

	.filterShadowWhite {
		filter: drop-shadow(0px 0px 4px rgba(255, 255, 255, 0.544));
	}

	.boxShadowWhite {
		box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.456);
	}
</style>
